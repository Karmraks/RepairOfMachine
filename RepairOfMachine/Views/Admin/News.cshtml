﻿@{
     ViewData["Title"] = "News";
 }

 <div class="container">
     <div class="text-center">
         <h1 class="display-4">News</h1>
        <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="AddNews">AddNews</a>
     </div>

     <div class="my-4">
         <table class="table table-bordered table-striped">
             <thead class="thead-dark">
             <tr>
                 <th scope="col">Title</th>
                 <th scope="col">Description</th>
                 <th scope="col">Author</th>
                 <th scope="col">CreateDate</th>
                 <th scope="col">Is active</th>
                 <th scope="col"></th>
                 <th scope="col"></th>
             </tr>
             </thead>
             <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.Title</td>
                     <td>@item.Description</td>
                     @* <td>@item.Date.ToString("yyyy.MM.dd HH:mm")</td> *@
                     <td>@item.UserName</td>
                     <td>@item.CreatedDate.ToString("yyyy.MM.dd HH:mm")</td>
                     <td>@item.IsActive</td>
                     <form method="get" asp-controller="Admin" asp-action="UpdateNews" asp-route-id="@item.Id">
                        <td><button type="submit" class="btn btn-primary btn-sm">Edit</button></td>
                     </form>
                        <form method="get" asp-controller="Admin" asp-action="DeleteNewsCheck" asp-route-id="@item.Id">
                        <td><button type="submit" class="btn btn-danger btn-sm">Delete</button></td>
                     </form>
                        

                 </tr>
             }
             </tbody>
         </table>
     </div>
 </div>
 
 
 <!-- end page title -->
